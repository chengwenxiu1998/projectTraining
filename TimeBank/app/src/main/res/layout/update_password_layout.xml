<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img16">
    <LinearLayout
        android:id="@+id/ll_xiugaimima"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#ffcc66"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.5"
            android:src="@drawable/img4"
            android:adjustViewBounds="true"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="修改密码"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:gravity="center" />
        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.3"
        android:orientation="vertical"
        android:gravity="center">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>
        <com.cwx.timebank.CircleImageView
            android:id="@+id/civ_head_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/touxiang3"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"/>
        <EditText
            android:id="@+id/et_orginal_password"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:hint="请输入原密码"
            android:textColor="#101010"
            android:background="@drawable/edittext_shape"
            android:paddingLeft="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>
        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:hint="请输入新密码"
            android:textColor="#101010"
            android:background="@drawable/edittext_shape"
            android:paddingLeft="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>
        <EditText
            android:id="@+id/et_sure_password"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:hint="请确认新密码"
            android:textColor="#101010"
            android:background="@drawable/edittext_shape"
            android:paddingLeft="20dp"/>
        <TextView
            android:id="@+id/tv_error"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:textColor="#f00"
            android:gravity="center_vertical"/>
        <Button
            android:id="@+id/btn_save"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="保存"
            android:textSize="20dp"
            android:background="@drawable/button_shape1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"></LinearLayout>
    </LinearLayout>
</LinearLayout>
