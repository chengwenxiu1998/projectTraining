<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:src="@drawable/my_info_bg"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow"
            android:layout_marginTop="-160dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80dp">
            <com.cwx.timebank.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/hellokity"
                android:layout_marginLeft="60dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="hello kity"
                android:textColor="#3f6f8f"
                android:gravity="bottom"/>
        </LinearLayout>
    <TextView
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6e95d5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="ID："
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:text="123456"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6e95d5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="手机号："
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:text="18032762013"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6e95d5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="真实姓名："
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_real_name"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:text="李洁"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6e95d5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="性别："
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:text="女"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6e95d5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="地区："
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_area"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:text="李洁"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6e95d5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="发布任务次数："
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_send_count"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6e95d5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="领取任务次数："
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tv_accept_count"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:text="3"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#6e95d5"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/snail"
        android:layout_gravity="right"/>
</LinearLayout>
