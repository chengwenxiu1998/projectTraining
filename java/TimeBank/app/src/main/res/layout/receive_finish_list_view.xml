<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_item">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp">
        <com.cwx.timebank.CircleImageView
            android:id="@+id/iv_receive_touxiang"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/touxiang4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_receive_petname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="熊大"
                    android:textColor="#000000"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tv_task_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/coin" />

                    <TextView
                        android:id="@+id/tv_receive_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="10"
                        android:textColor="#dc43"
                        android:textSize="35dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_time_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布于5分钟前-石家庄 河北师范大学"
                android:textColor="#aaaaaa"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="2dp">
        <Button
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="描述"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_shape2"/>
        <TextView
            android:layout_marginLeft="6dp"
            android:id="@+id/tv_yaoqiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="求帮取快递："
            android:textSize="22dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_receive_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中通快递"
        android:textSize="22dp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="2dp"/>
    <!--<Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="进行中"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_shape1"
        android:layout_gravity="right"/>-->
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#dcdcdc"
        android:layout_marginTop="7dp"/>
</LinearLayout>
