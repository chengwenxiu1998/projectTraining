<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_send">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="#ffcc66"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_return"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1.5"
                android:src="@drawable/img4"
                android:adjustViewBounds="true"
                android:layout_gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"/>
            <Button
                android:id="@+id/btn_send"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#ffcc66"
                android:text="发表"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_gravity="right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.3"
            android:orientation="vertical">
            <TabHost
                android:id="@android:id/tabhost"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="#aaaaaa"/>
                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@android:id/tabs">
                        <!--买时间页面-->
                        <LinearLayout
                            android:id="@+id/tab1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="6"
                                android:orientation="vertical"
                                android:background="@drawable/edittext_shape2"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="6"
                                    android:orientation="vertical">
                                    <EditText
                                        android:id="@+id/et_send_task"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:hint="你希望别人帮你做……"
                                        android:textSize="20dp"
                                        android:background="@null"
                                        android:layout_marginLeft="20dp"
                                        />
                                    <EditText
                                        android:id="@+id/et_miaoshu"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="15dp"
                                        android:background="@null"
                                        android:layout_marginLeft="20dp"
                                        android:minLines="4"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="39dp"
                                        android:orientation="horizontal"
                                        android:weightSum="1">

                                        <TextView
                                            android:id="@+id/tv_time_money"
                                            android:layout_width="wrap_content"
                                            android:layout_height="25dp"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="20dp"
                                            android:text="时间币："
                                            android:textColor="#E51C23"
                                            android:textSize="15dp" />

                                        <View
                                            android:layout_width="30dp"
                                            android:layout_height="28dp" />

                                        <Spinner
                                            android:id="@+id/sp_spinner_shijianbi"
                                            style="@android:style/Widget.Spinner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:entries="@array/shijianbi"
                                            android:spinnerMode="dialog" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_endtime"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="截止时间："
                                            android:textColor="#E51C23"
                                            android:textSize="15dp" />

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:text="月"
                                            android:textSize="15dp"

                                            />

                                        <Spinner
                                            android:id="@+id/sp_endtime_month"
                                            style="@android:style/Widget.Spinner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="38dp"
                                            android:entries="@array/month"
                                            android:spinnerMode="dialog"></Spinner>

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:text="日"
                                            android:textSize="15dp"

                                            />

                                        <Spinner
                                            android:id="@+id/sp_endtime_day"
                                            style="@android:style/Widget.Spinner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="37dp"
                                            android:spinnerMode="dialog"></Spinner>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="33dp"
                                        android:orientation="horizontal">

                                        <View
                                            android:layout_width="96dp"
                                            android:layout_height="match_parent" />

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:text="时"
                                            android:textSize="15dp"

                                            />

                                        <Spinner
                                            android:id="@+id/sp_endtime_hour"
                                            style="@android:style/Widget.Spinner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="36dp"
                                            android:entries="@array/hour"
                                            android:spinnerMode="dialog"></Spinner>

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:text="分"
                                            android:textSize="15dp"

                                            />

                                        <Spinner
                                            android:id="@+id/sp_endtime_min"
                                            style="@android:style/Widget.Spinner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="37dp"
                                            android:entries="@array/min"
                                            android:spinnerMode="dialog"></Spinner>

                                    </LinearLayout>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="-13dp">
                                    <ImageView
                                        android:id="@+id/iv_photo"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_weight="1.6"
                                         />
                                    <ImageView
                                        android:id="@+id/iv_add_photo"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_weight="1.6"
                                        android:src="@drawable/img19"
                                        />

                                </LinearLayout>

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.4"/>
                            </LinearLayout>
                            <!--<View-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="50dp"/>-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="4"
                                android:orientation="vertical"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="20dp">
                                    <Button
                                        android:id="@+id/btn_help_buy_food"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_shape3"
                                        android:text="#代买饭#"
                                        android:textSize="15dp"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_weight="0.2"
                                        android:layout_height="wrap_content"/>
                                    <Button
                                        android:id="@+id/btn_daiqukuaidi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_shape3"
                                        android:text="#代取快递#"
                                        android:textSize="15dp"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="20dp">
                                    <Button
                                        android:id="@+id/btn_daijieshui"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_shape3"
                                        android:text="#代接水#"
                                        android:textSize="15dp"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_weight="0.2"
                                        android:layout_height="wrap_content"/>
                                    <Button
                                        android:id="@+id/btn_yueguangjie"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_shape3"
                                        android:text="#约逛街#"
                                        android:textSize="15dp"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="15dp">
                                    <Button
                                        android:id="@+id/btn_yueyundong"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_shape3"
                                        android:text="#约运动#"
                                        android:textSize="15dp"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_weight="0.2"
                                        android:layout_height="wrap_content"/>
                                    <Button
                                        android:id="@+id/btn_yuexuexi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_shape3"
                                        android:text="#约学习#"
                                        android:textSize="15dp"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="20dp">
                                    <Button
                                        android:id="@+id/btn_qita"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_shape3"
                                        android:text="#其他#"
                                        android:textSize="15dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                        </LinearLayout>
                        <!--卖时间页面-->
                        <LinearLayout
                            android:id="@+id/tab2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="6"
                                android:orientation="vertical"
                                android:background="@drawable/edittext_shape2"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="6"
                                    android:orientation="vertical">
                                    <EditText
                                        android:id="@+id/et_sell_send_task"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:hint="你可以帮别人做……"
                                        android:textSize="20dp"
                                        android:background="@null"
                                        android:layout_marginLeft="20dp"
                                        />


                                    <EditText
                                        android:id="@+id/et_sell_miaoshu"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="15dp"
                                        android:background="@null"
                                        android:layout_marginLeft="20dp"
                                        android:minLines="4"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="39dp"
                                        android:orientation="horizontal"
                                        android:weightSum="1">

                                        <TextView
                                            android:id="@+id/tv_sell_time_money"
                                            android:layout_width="wrap_content"
                                            android:layout_height="25dp"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="20dp"
                                            android:text="时间币："
                                            android:textColor="#E51C23"
                                            android:textSize="15dp" />

                                        <View
                                            android:layout_width="30dp"
                                            android:layout_height="28dp" />

                                        <Spinner
                                            android:id="@+id/sp_sell_spinner_shijianbi"
                                            style="@android:style/Widget.Spinner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:entries="@array/shijianbi"
                                            android:spinnerMode="dialog" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="35dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_endtime1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="截止时间："
                                            android:textColor="#E51C23"
                                            android:textSize="15dp" />

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:text="月"
                                            android:textSize="15dp"

                                            />

                                        <Spinner
                                            android:id="@+id/sp_endtime_month1"
                                            style="@android:style/Widget.Spinner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="38dp"
                                            android:entries="@array/month"
                                            android:spinnerMode="dialog"></Spinner>

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:text="日"
                                            android:textSize="15dp"

                                            />

                                        <Spinner
                                            android:id="@+id/sp_endtime_day1"
                                            style="@android:style/Widget.Spinner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="37dp"
                                            android:spinnerMode="dialog"></Spinner>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="33dp"
                                        android:orientation="horizontal">

                                        <View
                                            android:layout_width="96dp"
                                            android:layout_height="match_parent" />

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:text="时"
                                            android:textSize="15dp"

                                            />

                                        <Spinner
                                            android:id="@+id/sp_endtime_hour1"
                                            style="@android:style/Widget.Spinner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="36dp"
                                            android:entries="@array/hour"
                                            android:spinnerMode="dialog"></Spinner>

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

                                            android:text="分"
                                            android:textSize="15dp"

                                            />

                                        <Spinner
                                            android:id="@+id/sp_endtime_min1"
                                            style="@android:style/Widget.Spinner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="37dp"
                                            android:entries="@array/min"
                                            android:spinnerMode="dialog"></Spinner>

                                    </LinearLayout>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="-13dp">
                                    <ImageView
                                        android:id="@+id/iv_sell_photo"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_weight="1.6"
                                        />
                                    <ImageView
                                        android:id="@+id/iv_sell_add_photo"
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_weight="1.6"
                                        android:src="@drawable/img19"
                                        />

                                </LinearLayout>

                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.4"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="4"
                                android:orientation="vertical"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="20dp">
                                    <Button
                                        android:id="@+id/btn_sell_help_buy_food"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_shape3"
                                        android:text="#代买饭#"
                                        android:textSize="15dp"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_weight="0.2"
                                        android:layout_height="wrap_content"/>
                                    <Button
                                        android:id="@+id/btn_sell_daiqukuaidi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_shape3"
                                        android:text="#代取快递#"
                                        android:textSize="15dp"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="20dp">
                                    <Button
                                        android:id="@+id/btn_sell_daijieshui"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_shape3"
                                        android:text="#代接水#"
                                        android:textSize="15dp"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_weight="0.2"
                                        android:layout_height="wrap_content"/>
                                    <Button
                                        android:id="@+id/btn_sell_yueguangjie"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_shape3"
                                        android:text="#约逛街#"
                                        android:textSize="15dp"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="15dp">
                                    <Button
                                        android:id="@+id/btn_sell_yueyundong"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_shape3"
                                        android:text="#约运动#"
                                        android:textSize="15dp"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_weight="0.2"
                                        android:layout_height="wrap_content"/>
                                    <Button
                                        android:id="@+id/btn_sell_yuexuexi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_shape3"
                                        android:text="#约学习#"
                                        android:textSize="15dp"/>
                                    <View
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="20dp">
                                    <Button
                                        android:id="@+id/btn_sell_qita"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/button_shape3"
                                        android:text="#其他#"
                                        android:textSize="15dp"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                        </LinearLayout>
                    </FrameLayout>
                </RelativeLayout>

            </TabHost>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>