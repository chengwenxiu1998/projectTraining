<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img16">
    <LinearLayout
        android:id="@+id/ll_xiugaimima"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:src="@drawable/img4"
            android:adjustViewBounds="true"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="修改手机号"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:gravity="center" />
        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您当前绑定的手机号是："
            android:textColor="#000"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/tv_old_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <EditText
            android:layout_marginTop="30dp"
            android:id="@+id/et_password"
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:hint="请输入密码"
            android:textColor="#101010"
            android:background="@drawable/edittext_shape"
            android:paddingLeft="20dp"/>
        <TextView
            android:id="@+id/tv_pwd_error"
            android:layout_marginTop="10dp"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:textColor="#f00" />
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_shape">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textColor="#000"
                android:textSize="18dp"/>
            <EditText
                android:background="@null"
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="55dp"
                android:hint="请输入新手机号"
                android:textColor="#101010"
                android:paddingLeft="20dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_phone_error"
            android:layout_marginTop="10dp"
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:textColor="#f00" />
        <LinearLayout
            android:background="@drawable/edittext_shape"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:background="@null"
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="55dp"
                android:hint="请输入验证码"
                android:textColor="#101010"
                android:paddingLeft="20dp"/>
            <Button
                android:id="@+id/btn_get_code"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="55dp"
                android:text="获取验证码"
                android:gravity="center"
                android:textColor="#d41c3c"
                android:textSize="17dp"
                android:background="@null"/>
        </LinearLayout>

        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/btn_save"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:text="提交"
            android:textSize="20dp"
            android:background="@drawable/button_shape1"/>
    </LinearLayout>

</LinearLayout>
