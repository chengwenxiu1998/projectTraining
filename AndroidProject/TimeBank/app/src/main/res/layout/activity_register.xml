<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img16">
    <LinearLayout
        android:id="@+id/ll_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:src="@drawable/img4"
            android:adjustViewBounds="true"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center" />
        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"/>
        <com.cwx.timebank.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/touxiang3"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"/>
        <EditText
            android:id="@+id/et_petname"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:hint="请输入昵称"
            android:textColor="#101010"
            android:background="@drawable/edittext_shape"
            android:paddingLeft="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:hint="请输入手机号"
            android:textColor="#101010"
            android:background="@drawable/edittext_shape"
            android:paddingLeft="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="#101010"
            android:background="@drawable/edittext_shape"
            android:paddingLeft="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <EditText
            android:id="@+id/et_sure_password"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:textColor="#101010"
            android:background="@drawable/edittext_shape"
            android:paddingLeft="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_message_captcha"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:hint="请输入短信验证码"
                android:textColor="#101010"
                android:background="@drawable/edittext_shape"
                android:paddingLeft="20dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:gravity="center"
                android:textColor="#d41c3c"
                android:textSize="17dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>
        <TextView
            android:id="@+id/tv_title2"
            android:textSize="18dp"
            android:textColor="#f00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <CheckBox
                android:checked="true"
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已阅读并同意时间银用户协议及隐私保护协议"
                android:textSize="14sp"
                android:textColor="#101010"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <Button
            android:id="@+id/btn_register"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:text="注册"
            android:textSize="20dp"
            android:textColor="@color/titleText"
            android:background="@drawable/button_shape1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"></LinearLayout>
    </LinearLayout>
</LinearLayout>
