<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--头像部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <com.cwx.timebank.CircleImageView
            android:id="@+id/civ_head_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/tutu"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="3dp">
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大耳朵图图来也"
                android:textColor="#E180A1"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/tv_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3分钟前"
                android:textColor="#9D808A"
                />
        </LinearLayout>
    </LinearLayout>

    <!--评论部分-->
    <TextView
        android:id="@+id/tv_talk_text"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="质量很不错！质量很好！很好！"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_marginLeft="70dp"/>
    <ImageView
        android:id="@+id/iv_talk_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/girl"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
