<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_shishai_detail">

    <LinearLayout
        android:id="@+id/clickShai"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.cwx.timebank.CircleImageView
            android:id="@+id/iv_headphoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/touxiang1"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:gravity="center|left">
            <TextView
                android:id="@+id/tv_petname"
                android:text="昵称"
                android:textSize="18dp"
                android:textColor="#e180a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_time"
                android:text="时间"
                android:textSize="13dp"
                android:textColor="#9d808a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_shaicontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晒晒内容"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/iv_addphoto"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/bear"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_see_comment"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/img6" />

        <TextView
            android:id="@+id/tv_review"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="30"
            android:textSize="16dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/img7" />

        <TextView
            android:id="@+id/tv_zan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="179"
            android:textSize="16dp"
            android:gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_comment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:visibility="gone"
        android:layout_alignParentBottom="true">


        <EditText
            android:id="@+id/comment_content"
            android:hint="请输入"
            android:textSize="15sp"
            android:singleLine="true"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/comment_send"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:text="发送"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"/>
    </RelativeLayout>

</LinearLayout>
