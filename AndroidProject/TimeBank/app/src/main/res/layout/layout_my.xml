<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--android:background="@drawable/beijing"
    android:id="@+id/ll_frame"-->
    <!--标题栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/title">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="20dp"
            android:src="@drawable/img4"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:text="我的"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/titleText"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp"
            android:src="@drawable/set"
            android:layout_gravity="center"
            android:adjustViewBounds="true"/>
    </LinearLayout>
    <!--头像部分-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <com.cwx.timebank.CircleImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/wangyuan"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="满满"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="ID:123456"
                android:textSize="16dp"
                android:textColor="#000000"/>
        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/arrow_right"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        android:layout_marginTop="3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/fasong"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我发布的"
            android:textSize="13dp"
           android:textColor="#000000"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        android:layout_marginTop="3dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/jieshou"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我接收的"
            android:textSize="13dp"
            android:textColor="#000000"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        android:layout_marginTop="3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/shijianbi"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我的时间币"
            android:textSize="13dp"
            android:textColor="#000000"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        android:layout_marginTop="3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/qiandao"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="签到"
            android:textSize="13dp"
            android:textColor="#000000"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        android:layout_marginTop="3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/xiugaimima"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="修改密码"
            android:textSize="13dp"
            android:textColor="#000000"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        android:layout_marginTop="3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/tuichudenglu"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="退出登录"
            android:textSize="13dp"
            android:textColor="#000000"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        android:layout_marginTop="3dp"/>
</LinearLayout>