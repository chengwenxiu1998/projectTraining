<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">
    <!--正文-->
   <!--上边界-->
   <TextView
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/layerlist"
        />
    <!--中间内容-->
    <!--中间内容第一部分 头像部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <com.cwx.timebank.CircleImageView
            android:id="@+id/civ_head_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/p8"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="80dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="樱桃小丸子"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textSize="25dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tv_send_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布于10分钟前-河北师范大学"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="45dp"
            android:src="@drawable/coin"
            android:layout_marginTop="17dp"
           />
        <TextView
            android:id="@+id/tv_coin_count"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#FF0000"
            android:textSize="45dp"
            android:layout_marginTop="6dp"
            android:gravity="right"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>
    <!--中间内容第二部分 描述部分-->
    <!--描述标题-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="描述"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/desc_background"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/tv_task_tag"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="求代取快递"
            android:textColor="#000000"
            android:textSize="18dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_task_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="外面太冷啦，有哪位小伙伴今天要在西门中通取快递呀，帮忙取一下呗！！！"
        android:maxLines="2"
        android:maxEms="30"
        android:ellipsize="end"/>
    <!--中间内容第三部分 领取此任务按钮-->
    <Button
        android:id="@+id/gettask"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="领取此任务"
        android:textColor="#ffffff"
        android:background="@drawable/lingqurenwu_background"
        android:layout_gravity="right"/>

    <!--下边界-->
  <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/layerlist"
        android:layout_marginBottom="3dp"
        />
</LinearLayout>
